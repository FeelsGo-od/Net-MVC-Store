@model OrderViewModel
@{
    ViewData["Title"] = "Order Form Page";
}

<h2>Order Form</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ProductName">Product Name:</label>
        <input asp-for="ProductName" class="form-control" required>
    </div>

    <div class="form-group">
        <label asp-for="Quantity">Quantity:</label>
        <input asp-for="Quantity" type="number" class="form-control" required>
    </div>

    <div class="form-group">
        <label asp-for="CustomerName">Customer Name:</label>
        <input asp-for="CustomerName" class="form-control" required>
    </div>

    <div class="form-group">
        <label asp-for="ShippingAddress">Shipping Address:</label>
        <textarea asp-for="ShippingAddress" class="form-control" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit Order</button>
</form>